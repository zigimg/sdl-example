    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/bin/sdl-example.exe",
            "args": [
                "assets/png_image.png"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Build"
        },
        {
            "name": "Debug (UNIX)",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceFolder}/zig-out/bin/sdl-example",
            "arguments": "assets/png_image.png",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build"
        }
    ]
}